generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meetup {
  id              Int       @id @unique @default(autoincrement())
  title           String    @unique
  description     String
  date            DateTime
  place           String
  ownerId         Int
  tags            String[]
  meetupOrganizer User?    @relation("MeetupOrganizer", fields: [ownerId], references: [id])
  meetupFollowers User[]   @relation("MeetupFollower")
  lat             Float
  long            Float
}

model User {
  id                 Int      @id @unique @default(autoincrement())
  username           String   @unique
  password           String
  role               UserRole @default(USER)
  hashedRefreshToken String?
  createdMeetups     Meetup[] @relation("MeetupOrganizer")
  followedMeetups    Meetup[] @relation("MeetupFollower")
}

enum UserRole {
  ADMIN
  USER
  ORGANIZER
}
