// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meetup {
  id              Int               @id @unique @default(autoincrement())
  title           String            @unique
  description     String
  date            DateTime
  place           String
  ownerId         Int
  tags            String[]
  members         Members[]
  meetupOrganizer Users?            @relation("MeetupOrganizer", fields: [ownerId], references: [id])
  meetupFollowers Users[]           @relation("MeetupFollower")
  lat             Float
  long            Float
}

model Members {
  id       Int     @id @unique @default(autoincrement())
  meetup   Meetup @relation(fields: [meetupId], references: [id])
  meetupId Int
  userId   Int
}

model Users {
  id                 Int       @id @unique @default(autoincrement())
  username           String    @unique
  password           String
  role               UserRole  @default(USER)
  hashedRefreshToken String?
  createdMeetups     Meetup[] @relation("MeetupOrganizer")
  followedMeetups    Meetup[] @relation("MeetupFollower")
}

enum UserRole {
  ADMIN
  USER
  ORGANIZER
}
